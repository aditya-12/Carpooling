<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95A7DA"
    tools:context=".Login_Activity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="148dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.72"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="360dp"
        android:layout_height="340dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/square"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/textView"
            android:layout_width="347dp"
            android:layout_height="44dp"
            android:layout_marginTop="24dp"
            android:paddingStart="15dp"
            android:text="@string/login"
            android:textColor="#0C0C0C"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.246"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/phn_num"
            android:layout_width="336dp"
            android:layout_height="51dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_style"
            android:ems="10"
            android:hint="ENTER THE PHONE NUMBER"
            android:inputType="phone"
            android:maxLength="10"
            android:phoneNumber="true"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/otp1"
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/next_btn"
            app:layout_constraintEnd_toStartOf="@+id/otp2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phn_num"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/otp2"
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/next_btn"
            app:layout_constraintEnd_toStartOf="@+id/otp3"
            app:layout_constraintTop_toBottomOf="@+id/phn_num"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/otp3"
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/next_btn"
            app:layout_constraintEnd_toStartOf="@+id/otp4"
            app:layout_constraintTop_toBottomOf="@+id/phn_num"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/otp4"
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/next_btn"
            app:layout_constraintEnd_toStartOf="@+id/otp5"
            app:layout_constraintTop_toBottomOf="@+id/phn_num"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/otp5"
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="22dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/next_btn"
            app:layout_constraintEnd_toStartOf="@+id/otp6"
            app:layout_constraintTop_toBottomOf="@+id/phn_num" />

        <EditText
            android:id="@+id/otp6"
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="22dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/next_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phn_num" />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="318dp"
            android:layout_height="50dp"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/btn_design"
            android:text="NEXT"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#472D81"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="23dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/next_btn"
            app:layout_constraintEnd_toStartOf="@+id/otp2"
            app:layout_constraintStart_toEndOf="@+id/otp1"
            app:layout_constraintTop_toBottomOf="@+id/phn_num"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Sending OTP...."
            android:textColor="#472D81"
            android:textSize="18sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/next_btn"
            app:layout_constraintEnd_toStartOf="@+id/otp5"
            app:layout_constraintTop_toBottomOf="@+id/otp4"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textview_dontreceive_code"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="171dp"
            android:layout_marginBottom="7dp"
            android:text="Don't Receive Code?"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/otp2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phn_num"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="152dp"
            android:layout_marginEnd="161dp"
            android:layout_marginBottom="169dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textview_dontreceive_code"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>